<?xml version="1.0" encoding="utf-8"?>

<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView" android:background="#ffffff">
    <GridLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:useDefaultMargins="false" android:clickable="false"
            android:orientation="vertical">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:text="Accomplist"
                android:id="@+id/textView" android:layout_row="0" android:layout_column="0" android:textSize="40dp"
                android:textColor="#0c7cff"/>
        <TextView
                android:layout_width="155dp"
                android:layout_height="110dp"
                android:text="Search Events"
                android:id="@+id/srchEvents" android:layout_row="1" android:layout_column="0"
                android:background="#0e7dff" android:textSize="30dp" android:textColor="#ffffff"
                android:layout_gravity="fill_horizontal" android:clickable="true"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="97dp"
                android:text="Top Events"
                android:id="@+id/topevents" android:layout_row="0" android:layout_column="1"
                android:background="#0c7cff" android:textColor="#ffffff" android:textSize="20dp"
                android:layout_gravity="fill_vertical" android:clickable="true"/>
        <TextView
                android:layout_width="153dp"
                android:layout_height="89dp"
                android:text="Search Tags"
                android:id="@+id/srchTags" android:layout_row="2" android:layout_column="0"
                android:textColor="#0E7DFF" android:textSize="30dp" android:clickable="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="74dp"
                android:text="Search Users"
                android:id="@+id/srchUsers" android:layout_row="1" android:layout_column="1" android:textSize="19dp"
                android:textColor="#0E7DFF" android:clickable="true"/>
        <TextView
                android:layout_width="153dp"
                android:layout_height="45dp"
                android:text="About"
                android:id="@+id/about" android:layout_row="3" android:layout_column="0"
                android:textColor="#ffffff" android:background="#0E7DFF" android:textSize="30dp"
                android:layout_gravity="fill" android:clickable="true"/>
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="115dp"
                android:text="My Profile"
                android:id="@+id/myProf" android:layout_row="2" android:layout_column="1"
                android:textSize="20dp" android:textColor="#ffffff" android:background="#0E7DFF"
                android:layout_gravity="fill_vertical" android:clickable="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Credits"
                android:id="@+id/credits" android:layout_row="3" android:layout_column="1"
                android:textSize="20dp" android:textColor="#0E7DFF" android:clickable="true"/>
    </GridLayout>
</ScrollView>